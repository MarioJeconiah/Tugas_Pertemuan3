program latihan;
uses crt;
var
    suhu: real;
begin
    clrscr;
    write('Masukkan suhu dalam derajat celcius : '); readln(suhu);

    if (suhu >= 0) and (suhu <= 15) then begin
    writeln('Cuaca dingin, pakai jaket ya!');  
    end

    else if (suhu >= 16) and (suhu <= 25) then begin
    writeln('Cuaca nyaman, cocok untuk jalan-jalan.');
    end
    
    else if (suhu >= 26) and (suhu >= 35) then begin
    writeln('Cuaca hangat, tetap terhidrasi!'); 
    end

    else if (suhu <0) then begin
    writeln('Cuaca sangat dingin, jangan lupa pakai jaket tebal!');
    end;

    end.
